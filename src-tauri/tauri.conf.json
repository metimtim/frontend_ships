{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "frontend_ships",
  "version": "0.1.0",
  "identifier": "com.github.timpronchenko.frontend-ships",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://127.0.0.1:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "plugins": {
    "http": {
      "enabled": true
    },
    "allowlist": {
      "http": {
        "request": true,
        "scope": [
          "http://localhost:3000/**",
          "http://127.0.0.1:3000/**",
          "http://localhost:3002/**",
          "http://127.0.0.1:3002/**",
          "http://localhost:8000/**",
          "http://127.0.0.1:8000/**"
        ]
      }
    }},
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "frontend_ships",
        "width": 1024,
        "height": 768,
        "resizable": true,
        "fullscreen": false,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}